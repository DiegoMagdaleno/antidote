#!/bin/zsh
local bundle=$1
local branch=$2
local giturl=$(_antidote_tourl $bundle)
local bundledir=$(_antidote_bundledir $giturl)

if [[ ! -d $bundledir ]]; then
  [[ -z "$branch" ]] || branch="--branch=$branch"
  command git clone $branch --quiet --depth 1 --recurse-submodules --shallow-submodules $giturl $bundledir
fi
