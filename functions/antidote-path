#!/usr/bin/env zsh

##? antidote-path - print the path of a cloned bundle
##?
##? usage: antidote path <bundle>
##?
##? args:
##?   <bundle>  The bundle whose cloned path will be printed

emulate -L zsh
setopt local_options extended_glob

if [[ $# -eq 0 ]]; then
  echo >&2 "antidote: error: required argument 'bundle' not provided, try --help"
  return 1
fi

local bundle="$1"
local bundledir=$(_antidote_bundledir $bundle)
if [[ ! -d $bundledir ]]; then
  echo >&2 "antidote: error: $bundle does not exist in cloned paths"
  return 1
else
  echo "$bundledir"
fi
