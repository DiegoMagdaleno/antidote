#!/bin/zsh

if [[ $# -eq 0 ]]; then
  echo >&2 "antidote: error: required argument 'bundle' not provided, try --help"
  return 1
fi

local ANTIDOTE_HOME=$(antidote-home)
local bundle=$1
local bundlepath=$ANTIDOTE_HOME/${1:t}
if [[ ! -d $bundlepath ]]; then
  echo >&2 "antidote: error: $bundle does not exist on expected location: $bundlepath"
  return 1
fi

echo "Removing $bundle..."
command rm -rf $bundlepath
