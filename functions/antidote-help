#!/usr/bin/env zsh
0=${(%):-%x}
local help_dir="${0:a:h:h}/help"
antidote_help="$help_dir/antidote.txt"
if [[ -z "$1" ]]; then
  cat "$antidote_help"
  return
fi

local help_txt="${help_dir}/antidote-${1}.txt"
if [[ ! -f "$help_txt" ]]; then
  echo >&2 "antidote: error: expected valid command but got '$@'"
  return 1
fi
cat "$help_txt"
